@model IEnumerable<PeopleAccountViewModel>
@{
    ViewData["Title"] = "Users";
}
<div class="page-header">
    <h1>User List</h1>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Company</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Tags</th>
        </tr>
    </thead>
    @foreach (var acc in Model)
    {
        <tr>
            <td>
                <a asp-controller="Home"
                   asp-action="UserDetails"
                   asp-route-id="@acc.Id">
                    @acc.Name
                </a>
            </td>
            <td>@acc.Company</td>
            <td>@acc.Email</td>
            <td>@acc.Phone</td>
            <td>
                @foreach (var tag in acc.Tags)
                {
                    <a asp-controller="Home"
                       asp-action="UsersWithTag"
                       asp-route-tagName="@tag">
                        @tag
                    </a>
                }
            </td>
        </tr>
    }
</table>
@if (ViewData["IsTagFiltered"] != null)
{
    <a asp-controller="Home" asp-action="Index">< Home</a>
}